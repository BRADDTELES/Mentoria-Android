<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageFiltroCategoria"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:shapeAppearanceOverlay="@style/CantosArredondados"
        app:srcCompat="@drawable/nao_disponivel" />

    <TextView
        android:id="@+id/textTituloFiltroCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Restaurante"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/imageFiltroCategoria"
        app:layout_constraintStart_toStartOf="@+id/imageFiltroCategoria"
        app:layout_constraintTop_toBottomOf="@+id/imageFiltroCategoria" />
</androidx.constraintlayout.widget.ConstraintLayout>
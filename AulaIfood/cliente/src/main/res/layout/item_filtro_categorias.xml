<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageCategoria"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurante" />

    <TextView
        android:id="@+id/textNomeCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurante"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageCategoria"
        app:layout_constraintStart_toStartOf="@+id/imageCategoria"
        app:layout_constraintTop_toBottomOf="@+id/imageCategoria" />
</androidx.constraintlayout.widget.ConstraintLayout>